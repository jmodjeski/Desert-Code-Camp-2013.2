doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/polymer-ui-elements/basic.css')

    script(type='text/javascript', src='/bower_components/polymer/polymer.min.js')

    link(rel="import", href="/polymer-ui-elements/polymer-ui-toolbar/polymer-ui-toolbar.html")
    link(rel="import", href="/polymer-ui-elements/polymer-ui-icon-button/polymer-ui-icon-button.html")

    block head
  body.polymer-ui-body-text(theme="polymer-ui-light-theme")
    polymer-ui-toolbar
      polymer-ui-icon-button(icon="menu")
      div(flex) Title
      polymer-ui-toolbar(responsive)
      polymer-ui-icon-button(icon="add")
      polymer-ui-icon-button(icon="trash")
      polymer-ui-icon-button(icon="search")
      polymer-ui-icon-button(icon="settings")
        polymer-ui-menu(selected="1")
          polymer-ui-menu-item(label="Dark Theme")
          polymer-ui-menu-item(label="Light Theme")

    block content